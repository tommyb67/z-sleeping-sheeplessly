 <tr>
    <td>
      <%= link_to banner.id, banner %>
    </td>
    <td>
      <%= banner.start_date %>
    </td>
    <td>
      <%= banner.end_date %>
    </td>
    <td>
      <%= banner.image %>
    </td>
    <td>
      <%= banner.user.full_name %>
    </td>
    <td>
       <%= status_label banner.status %>
    </td>
    <td>
      <%= link_to '', edit_banner_path(banner), id: "edit_#{banner.id}", class: 'glyphicon glyphicon-pencil index-icons' if policy(banner).update? %>
    </td>
    <td>
      <%= link_to '', banner_path(banner), method: :delete, id: "delete_post_#{banner.id}_from_index", class: 'glyphicon glyphicon-trash index-icons', data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>