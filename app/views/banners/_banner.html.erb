 <tr>
    <td>
      <%= banner.id %>
    </td>
    <td>
      <%= banner.start_date %>
    </td>
    <td>
      <%= banner.end_date %>
    </td>
    <td>
      <%= banner.image %>
    </td>
    <td>
      <%= banner.user.full_name %>
    </td>
    <td>
       <%= status_label banner.status %>
    </td>
    <td>
      <%= link_to 'Edit', edit_banner_path(banner), id: "edit_#{banner.id}" if policy(banner).update? %>
    </td>
    <td>
      <%= link_to 'Delete', banner_path(banner), method: :delete, id: "delete_post_#{banner.id}_from_index", data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>