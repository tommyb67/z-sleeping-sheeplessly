<div>
  <h2>Location: <%= @banner.location %></h2>
</div>

<div class="well">
  <div>
    <h3>Start Date: <%= @banner.start_date %></h3>
  </div>

  <div>
    <h3>End Date: <%= @banner.end_date %></h3>
  </div>

  <div>
    <h3>Image: <%= @banner.image %></h3>
  </div>

  <div>
    <h3>Current State of approval: <%= @banner.status %></h3>
  </div>
</div>

<%= link_to 'Back', banners_path, class: 'btn btn-success' %>

<%= link_to 'Edit', edit_banner_path(@banner), class: 'btn btn-primary' if policy(@banner).update? %>

